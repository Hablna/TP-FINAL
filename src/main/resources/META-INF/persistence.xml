<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
  <persistence-unit name="petstore">
    <provider>
      org.hibernate.jpa.HibernatePersistenceProvider
    </provider>
    <class>fr.epsi.entite.Address</class>
    <class>fr.epsi.entite.Animal</class>
    <class>fr.epsi.entite.Cat</class>
    <class>fr.epsi.entite.Fish</class>
    <class>fr.epsi.entite.PetStore</class>
    <class>fr.epsi.entite.Product</class>

    <properties>
      <property name="hibernate.hbm2ddl.auto" value="create"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
      <property name="jakarta.persistence.jdbc.url"
                value="jdbc:mariadb://localhost:3306/petstore"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value=""/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
